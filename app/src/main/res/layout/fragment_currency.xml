<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/currency_image"
        android:layout_width="45dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"

        android:scaleType="fitXY"
        android:src="@color/black" />

    <TextView
        android:id="@+id/currency_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/currency_image"
        android:text="LOREM"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/currency_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/currency_image"
        android:text="lorem ipsum dolor sit amet"
        android:textColor="@color/currency_blue" />

    <TextView
        android:id="@+id/buy_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="20dp"
        android:text="70.15"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/buy_value_indicator"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@id/buy_value"
        android:src="@drawable/arrow_up" />

    <TextView
        android:id="@+id/sell_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@id/buy_value_indicator"
        android:text="72.15"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/sell_value_indicator"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@id/sell_value"
        android:src="@drawable/arrow_down" />
</RelativeLayout>